<% layout('../layout.ejs') -%>
<%- partial('../partials/flashMessage.ejs',{ "flash": flash }) %>

<form class="form-horizontal" role="form" id="loginForm" action="/auth/login" method="post">
	<fieldset>	
		<legend>Login</legend>
		<div class="form-group">
			<label class="control-label required col-lg-2" for="username">Username:</label>
			<div class="col-lg-4">
				<input type="text" class="form-control" name="username" id="username" value="" size="30" maxLength="30" autofocus="autofocus" required="required" autocomplete="on">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label required col-lg-2" for="password">Password:</label>
			<div class="col-lg-4">
				<input type="password" class="form-control" name="password" id="password" value="" size="30" maxLength="30" autocomplete="on" required="required">
			</div>
		</div>
	</fieldset>	
	<div class="form-group">
	    <div class="col-lg-offset-2 col-lg-10">
	    	<button type="submit" class="btn btn-warning">Log In</button>
	    </div>
  	</div>
</form>